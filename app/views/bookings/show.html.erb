<style>
  .confirmation-page { background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%); }
  .confirmation-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
    border: 1px solid #e2e8f0;
  }
  .success-banner {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 2rem;
    background: linear-gradient(135deg, #dcfce7, #bbf7d0);
    border-radius: 12px;
    margin-bottom: 2rem;
  }
  .success-icon { font-size: 3rem; }
  .success-text h2 { font-size: 2rem; font-weight: 700; color: #0f172a; }
  .success-text p { color: #64748b; margin-top: 0.5rem; }
  .details-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    padding: 2rem;
    border-bottom: 1px solid #e2e8f0;
  }
  .detail-item {
    display: flex;
    flex-direction: column;
  }
  .detail-label {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #94a3b8;
    margin-bottom: 0.5rem;
  }
  .detail-value {
    font-size: 1.125rem;
    font-weight: 700;
    color: #0f172a;
  }
  .detail-subtext {
    font-size: 0.875rem;
    color: #64748b;
    margin-top: 0.25rem;
  }
  .price-box {
    background: linear-gradient(135deg, #e0e7ff, #dbeafe);
    border-radius: 8px;
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .price-label {
    font-weight: 600;
    color: #0f172a;
  }
  .price-value {
    font-size: 2.25rem;
    font-weight: 800;
    color: #4f46e5;
  }
  .info-box {
    background: #e0e7ff;
    border: 1px solid #bfdbfe;
    border-radius: 8px;
    padding: 1rem;
    margin: 1.5rem 0;
    display: flex;
    gap: 1rem;
    align-items: flex-start;
  }
  .info-box-icon { font-size: 1.5rem; }
  .info-box-text { color: #1e1b4b; font-size: 0.875rem; }
  .actions-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
    padding: 2rem;
  }
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
  }
  .btn-primary {
    background: linear-gradient(135deg, #4f46e5, #4338ca);
    color: white;
  }
  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(79, 70, 229, 0.3);
  }
  .btn-secondary {
    background: #f1f5f9;
    color: #0f172a;
    border: 1px solid #cbd5e1;
  }
  .btn-secondary:hover {
    background: #e2e8f0;
  }
  .confirmation-number {
    background: #f8fafc;
    border: 2px dashed #cbd5e1;
    border-radius: 8px;
    padding: 1rem;
    text-align: center;
    font-family: 'Courier New', monospace;
    font-weight: 700;
    font-size: 1.25rem;
    color: #4f46e5;
    margin: 1.5rem 0;
  }
</style>

<div class="confirmation-page min-h-screen py-12 px-6">
  <div class="max-w-3xl mx-auto">
    <!-- Success Banner -->
    <div class="success-banner">
      <div class="success-icon">ğŸ‰</div>
      <div class="success-text">
        <h2>Thank You!</h2>
        <p>Your booking is confirmed</p>
      </div>
    </div>

    <!-- Confirmation Card -->
    <div class="confirmation-card">
      <!-- Greeting -->
      <div style="padding: 2rem; text-align: center; border-bottom: 1px solid #e2e8f0;">
        <div style="font-size: 1.125rem; color: #64748b;">Hello,</div>
        <div style="font-size: 2rem; font-weight: 700; color: #0f172a; margin-top: 0.25rem;"><%= @booking.guest_name %> ğŸ‘‹</div>
      </div>

      <!-- Confirmation Number -->
      <div style="padding: 2rem; border-bottom: 1px solid #e2e8f0;">
        <div style="text-align: center; margin-bottom: 1rem;">
          <div style="font-size: 0.875rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; color: #94a3b8;">Confirmation Number</div>
        </div>
        <div class="confirmation-number">#<%= @booking.id %></div>
      </div>

      <!-- Booking Details Grid -->
      <div class="details-section">
        <div class="detail-item">
          <div class="detail-label">ğŸ¨ Room</div>
          <div class="detail-value"><%= @room.name %></div>
          <div class="detail-subtext">Capacity: <%= @room.capacity %> guest<%= @room.capacity > 1 ? 's' : '' %></div>
        </div>
        <div class="detail-item">
          <div class="detail-label">ğŸ“… Check-in</div>
          <div class="detail-value"><%= @booking.check_in.strftime("%b %d") %></div>
          <div class="detail-subtext"><%= @booking.check_in.strftime("%A, %Y") %></div>
        </div>
        <div class="detail-item">
          <div class="detail-label">ğŸšª Check-out</div>
          <div class="detail-value"><%= @booking.check_out.strftime("%b %d") %></div>
          <div class="detail-subtext"><%= @booking.check_out.strftime("%A, %Y") %></div>
        </div>
        <div class="detail-item">
          <div class="detail-label">ğŸ“† Duration</div>
          <div class="detail-value"><%= (@booking.check_out - @booking.check_in).to_i %> nights</div>
          <div class="detail-subtext">Total stay</div>
        </div>
        <div class="detail-item">
          <div class="detail-label">ğŸ’° Per Night</div>
          <div class="detail-value">$<%= @room.price_per_night %></div>
          <div class="detail-subtext">Room rate</div>
        </div>
        <div class="detail-item">
          <div class="detail-label">ğŸ“§ Your Email</div>
          <div class="detail-value" style="word-break: break-all;"><%= @booking.guest_email %></div>
          <div class="detail-subtext">Confirmation sent</div>
        </div>
      </div>

      <!-- Total Price -->
      <div style="padding: 2rem; border-bottom: 1px solid #e2e8f0;">
        <div class="price-box">
          <div class="price-label">Total Amount</div>
          <div class="price-value">$<%= @booking.total_price %></div>
        </div>
      </div>

      <!-- Info Box -->
      <div style="padding: 2rem;">
        <div class="info-box">
          <div class="info-box-icon">âœ‰ï¸</div>
          <div class="info-box-text">
            A confirmation email with full booking details has been sent to <strong><%= @booking.guest_email %></strong>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="actions-container">
        <a href="/confirmations" class="btn btn-primary">ğŸ“‹ View All Bookings</a>
        <a href="/" class="btn btn-secondary">ğŸ  Back to Home</a>
      </div>
    </div>

    <!-- Voice AI Info -->
    <div class="confirmation-card" style="margin-top: 2rem; padding: 2rem;">
      <h3 style="font-size: 1.125rem; font-weight: 700; color: #0f172a; margin-bottom: 1rem;">ğŸ™ï¸ Voice AI Integration</h3>
      <p style="color: #64748b; line-height: 1.6;">
        This booking was seamlessly confirmed through our hotel booking system. Voice AI assistants can integrate with our REST APIs to automate the entire booking experience through natural conversation.
      </p>
    </div>
  </div>
</div>
